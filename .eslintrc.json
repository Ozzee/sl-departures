{
    "root": true,
    "extends": [
        "eslint:recommended",
        "plugin:react/recommended"
    ],
    "plugins": [
        "react"
    ],
    "parser": "babel-eslint",
    "parserOptions": {
        "ecmaFeatures": {
            "ecmaVersion": 6,
            "jsx": true
        }
    },
    "rules": {
        "indent": ["error", 2],
        "semi": ["error", "never"],
        "eol-last": ["warn", "always"]
    }
}
